{
    "comments": {
        "lineComment": "--",
        "blockComment": [ "--[[", "--]]" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
		{
			"open": "{",
			"close": "}"
		},
		{
			"open": "[",
			"close": "]",
			"notIn": [
				"comment"
			]
		},
		{
			"open": "(",
			"close": ")"
		},
		{
			"open": "'",
			"close": "'",
			"notIn": [
				"string",
				"comment"
			]
		},
		{
			"open": "\"",
			"close": "\"",
			"notIn": [
				"string"
			]
		},
		{
			"open": "--[[ ",
			"close": " --]]",
			"notIn": [
				"string"
			]
		}
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "\\b(else|elseif|(local\\s+)?function|then|do|repeat)\\b((?!end).)*$|\\{\\s*$|\\s*(--\\[\\[)\\s*$",
        "decreaseIndentPattern": "^\\s*(elseif|else|end|until,?|\\}\\)?).*$|^\\s*(--\\]\\]).*$"
    }
}